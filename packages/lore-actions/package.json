{
  "name": "lore-actions",
  "version": "0.3.1",
  "author": "Storcery",
  "license": "MIT",
  "description": "Blueprints to reduce boilerplate for Redux actions",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib coverage .tmp",
    "lint": "eslint src test",
    "test": "mocha --compilers js:babel-core/register --recursive",
    "test:cov": "babel-node $(npm bin)/isparta cover $(npm bin)/_mocha -- --recursive",
    "check": "npm run lint && npm run test",
    "build": "babel src --out-dir lib",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storcery/lore.git"
  },
  "bugs": {
    "url": "https://github.com/storcery/lore/issues"
  },
  "homepage": "https://github.com/storcery/lore#readme",
  "dependencies": {
    "lodash": "^3.10.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-core": "^6.2.1",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.1.18",
    "bluebird": "^3.2.1",
    "chai": "^3.4.1",
    "eslint": "^1.7.1",
    "eslint-config-airbnb": "^1.0.2",
    "eslint-plugin-react": "^3.6.3",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "isparta": "^4.0.0",
    "mocha": "^2.3.4",
    "rimraf": "^2.4.4",
    "sinon": "^1.17.2"
  }
}
